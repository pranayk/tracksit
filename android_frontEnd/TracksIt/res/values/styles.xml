<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    


    <style name="Theme.Tracksit" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_tracksit</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Tracksit</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Tracksit</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tracksit</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Tracksit</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Tracksit</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_tracksit</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_tracksit</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tracksit</item>
        
        
    </style>

    <style name="ActionBar.Solid.Tracksit" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_tracksit</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_tracksit</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_tracksit</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Tracksit</item>
    </style>

    <style name="ActionBar.Transparent.Tracksit" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_tracksit</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Tracksit</item>
    </style>

    <style name="PopupMenu.Tracksit" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tracksit</item>	
    </style>

    <style name="DropDownListView.Tracksit" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tracksit</item>
    </style>

    <style name="ActionBarTabStyle.Tracksit" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tracksit</item>
    </style>

    <style name="DropDownNav.Tracksit" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_tracksit</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tracksit</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tracksit</item>
    </style>
    
    <style name="ProgressBar.Tracksit" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tracksit</item>
    </style>
    
    <style name="ActionButton.CloseMode.Tracksit" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tracksit</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Tracksit.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Tracksit</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Tracksit</item>
    </style>
    
    
    

</resources>
